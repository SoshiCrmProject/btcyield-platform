# Environment
NODE_ENV=development
LOG_LEVEL=debug

# URLs
APP_URL=http://localhost:3000
API_URL=http://localhost:3001
WS_URL=ws://localhost:8001
AI_SERVICE_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql://btcyield:btcyield123@localhost:5432/btcyield?schema=public
REDIS_URL=redis://localhost:6379
QUESTDB_URL=postgresql://admin:quest@localhost:8812/qdb

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_EXPIRES_IN=7d

# Blockchain
ALCHEMY_API_KEY=your-alchemy-key
INFURA_API_KEY=your-infura-key
ETHERSCAN_API_KEY=your-etherscan-key
PRIVATE_KEY=your-deployer-private-key

# External APIs
COINGECKO_API_KEY=your-coingecko-api-key
COINGECKO_API_URL=https://pro-api.coingecko.com/api/v3

# AWS S3 (Contabo Object Storage)
S3_ENDPOINT=https://eu2.contabostorage.com
S3_REGION=eu-central-1
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=btcyield-storage

# Monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token
GRAFANA_API_KEY=your-grafana-api-key

# Security
CLOUDFLARE_API_TOKEN=your-cloudflare-token
CLOUDFLARE_ZONE_ID=your-zone-id
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# AI Service
OPENAI_API_KEY=your-openai-key
HUGGINGFACE_TOKEN=your-hf-token
CUDA_VISIBLE_DEVICES=0
MODEL_CACHE_DIR=/models

# Feature Flags
ENABLE_MAINNET=false
ENABLE_SOCIAL_FEATURES=true
ENABLE_AI_AGENTS=true
ENABLE_CROSS_CHAIN=false